<resources>
    <!-- style the list navigation -->


    <style name="CustomSearchView" parent="Base.TextAppearance.AppCompat">
        <item name="android:color">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Widget.ListPopupWindow">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <item name="android:selectableItemBackground">@drawable/ad_selectable_background</item>
        <item name="android:popupMenuStyle">@style/CustomSearchView</item>
        <item name="android:dropDownListViewStyle">@style/CustomSearchView</item>

        <item name="android:divider">@color/divider</item>
    </style>

    <style name="AppThemeTeal" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryTeal</item>
        <item name="colorPrimaryDark">@color/primary_darkTeal</item>
        <item name="colorAccent">@color/accentTeal</item>
        <item name="android:textColorPrimary">@color/primary_textTeal</item>
        <item name="android:textColorSecondary">@color/secondary_textTeal</item>

        <item name="android:selectableItemBackground">@drawable/ad_selectable_background</item>
        <item name="android:popupMenuStyle">@style/CustomSearchView</item>
        <item name="android:dropDownListViewStyle">@style/CustomSearchView</item>

        <item name="android:divider">@color/dividerTeal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <!--<item name="windowNoTitle">true</item> -->
    </style>

    <style name="AppThemeTeal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppThemeTeal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>
-->
</resources>
